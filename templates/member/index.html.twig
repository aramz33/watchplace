{% extends 'base.html.twig' %}

{% block title %}Member {{ member.nom }}{% endblock %}

{% block main %}
    <div class="container">
        <h1 class="text-center my-4" style="color: #008157;">Votre espace WatchPlace !</h1>
        <table class="table table-hover">
            <thead class="table-light">
            <tr>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ member.nom }}</td>
                <td>
                    <a href="{{ path('member_show', {'id': member.id}) }}" class="btn btn-custom-green btn-sm">Afficher mes remontoires</a>
                    <a href="{{ path('app_vitrine_index', {'id': member.id}) }}" class="btn btn-custom-grey btn-sm">Afficher les vitrines publiques</a>
                    <a href="{{ path('app_my_vitrines', {'id': app.user.member.id})}}" class="btn btn-custom-outline btn-sm">Mes Vitrines</a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <style>
        .btn-custom-green {
            background-color: #008157; /* Vert Rolex */
            color: white;
        }

        .btn-custom-green:hover {
            background-color: #00635D; /* Vert foncé */
            color: white;
        }

        .btn-custom-grey {
            background-color: #d6d8db; /* Gris moyen */
            color: black;
        }

        .btn-custom-grey:hover {
            background-color: #bfc1c3; /* Gris plus foncé */
            color: black;
        }

        .btn-custom-outline {
            border: 1px solid #008157; /* Bordure Vert Rolex */
            color: #008157; /* Texte Vert Rolex */
        }

        .btn-custom-outline:hover {
            background-color: #008157; /* Fond Vert Rolex */
            color: white;
        }
    </style>
{% endblock %}
