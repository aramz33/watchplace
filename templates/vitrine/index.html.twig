{% extends 'base.html.twig' %}

{% block title %}Vitrine index{% endblock %}

{% block main %}
    <h1>Vitrine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Published</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vitrine in vitrines %}
            <tr>
                <td>{{ vitrine.id }}</td>
                <td>{{ vitrine.description }}</td>
                <td>{{ vitrine.published ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_vitrine_show', {'id': vitrine.id}) }}">show</a>
                    <a href="{{ path('app_vitrine_edit', {'id': vitrine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vitrine_new', {'id': member.id}) }}">Create new</a>
{% endblock %}
