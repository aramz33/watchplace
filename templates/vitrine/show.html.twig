{% extends 'base.html.twig' %}

{% block title %}Vitrine{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center" style="color: #008157;">Vitrine</h1>

        <table class="table table-hover my-4">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vitrine.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ vitrine.description }}</td>
            </tr>
            <tr>
                <th>Publi√©e</th>
                <td>{{ vitrine.published ? 'Oui' : 'Non' }}</td>
            </tr>
            </tbody>
        </table>

        <h2 class="mt-4" style="color: #008157;">Montres</h2>
        <ul class="list-unstyled">
            {% for montre in vitrine.montres %}
                <li>
                    <a href="{{ path('app_vitrine_montre_show', {'vitrine_id': vitrine.id, 'montre_id' : montre.id}) }}" class="link-custom">{{ montre }}</a>
                </li>
            {% endfor %}
        </ul>

        <div class="text-center my-3">
            <a href="{{ url }}" class="btn btn-custom-outline">Retour</a>
            <a href="{{ path('app_vitrine_edit', {'id': vitrine.id}) }}" class="btn btn-custom-green">Modifier</a>
            {{ include('vitrine/_delete_form.html.twig') }}
        </div>
    </div>

    <style>
        .link-custom {
            color: #007bff;
        }

        .link-custom:hover {
            text-decoration: underline;
        }

        .btn-custom-outline {
            border: 1px solid #008157;
            color: #008157;
        }

        .btn-custom-outline:hover {
            background-color: #008157;
            color: white;
        }

        .btn-custom-green {
            background-color: #008157;
            color: white;
        }

        .btn-custom-green:hover {
            background-color: #00635D;
            color: white;
        }
    </style>
{% endblock %}
